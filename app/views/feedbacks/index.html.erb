<table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>电话号码</th>
      <th>电子邮件</th>
      <th>消息</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= feedback.name %></td>
        <td><%= feedback.phone %></td>
        <td><%= feedback.email %></td>
        <td class="message"><%= feedback.message %></td>
        <td class="list_action1">
        <%= link_to '编辑', edit_feedback_path(feedback) %><td/>
        <td class="list_action2"><%= link_to '删除', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

