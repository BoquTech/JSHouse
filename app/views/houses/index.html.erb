<h1>Listing houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Introduce</th>
      <th>Style</th>
      <th>Price</th>
      <th>Location</th>
      <th>Area</th>
      <th>Discription</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.introduce %></td>
        <td><%= house.style %></td>
        <td><%= house.price %></td>
        <td><%= house.location %></td>
        <td><%= house.area %></td>
        <td><%= house.discription %></td>
        <td><%= house.address %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

