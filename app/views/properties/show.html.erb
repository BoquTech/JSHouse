
<%=render 'public/header'%>
<!--导航部分-->
<div id="tabs">
	<ul>
		<li>
			<a href="#">
				<h1><%= @property.city %></h1>
			</a>

		</li>
	</ul>
</div>

<div class="clear"></div>
<div id="bd">
  <div class="containers">
    <div class="core">

      <div class="abstract">
        <h1>
         <div id="buliding_name"> <%=@property.building_name%></div>
          <button id="translate1" class="translate1" onclick="translate1();">点击翻译</button>
          <button id="translate2" class="translate2" onclick="translate2();">translate</button>
        </h1>

        <div>
          <ul>
            
            <li>
              <%="Location:"%>
              <span id="position" class="position"><%= @property.address %></span>
              <a class="chack" href="#pro-invest"><%= "See Map"%></a>
            </li>
            <li>
              <%= "Price:"%>
              <span class="kind"><%="$"+@property.buy.to_i.to_s%></span>
            </li>
          </ul>
        </div>
      </div>

    <div class="clear"> </div>
      <div class="gallery">
        <div id="slider" class="nivoSlider">
        <% @property.item_images.each do |item_image| %>
         <img src="<%= item_image.image_url%>"/>
         <% end%>
        </div>
      </div>
      <div class="clear"> </div>

      <div id="fix" class="fix2">
        <div class="flat-content-navbar">
          <ul>
            <li>
              <a id="tab1" class="tab-item1" data-scoll="#pro-introduce" href="#pro-introduce" data-anchor="#pro-introduce" gaevent="#">Introduction</a>
            </li>
            <li>
              <a id="tab2" class="tab-item2" data-scorll="#pro-data" href="#pro-data" data-anchor="pro-data" gaevent="#">
                Freature
              </a>
            </li>
            <li>
                <a id="tab3" class="tab-item2" data-scroll="#pro-invest" href="#pro-invest" data-anchor="#pro-invest
                " gaevent="#">
                Data
                </a>
            </li>
              <li>
                <a id="tab4" class="tab-item2" data-scroll="#pro-map" href="#pro-map" data-anchor="#pro-map
                " gaevent="#">
                Location
                </a>
            </li>
          </ul>
        </div>
      </div>

      <div id="deal-stuff">
        <div class="introduce" id="pro-introduce">
          <h1>Introduction</h1>
          <p id="description"><%=@property.description.html_safe%></p>
        </div>

        <div class="introduce" id="pro-data">
          <h1>Feature</h1>
             <p class="description" id="feature"><%= @property.features.html_safe%></p>
        </div>

        <div class="introduce" id="pro-invest">
          <h1>Data</h1>
          <ul>
            <li><%="Bedroom:"%><span class="kind"><%=@property.bedrooms%></span></li>
            <li><%="Bathroom:"%><span class="kind"><%=@property.bathrooms%></span></li>
            <li><%="Reception room:"%><span class="kind"><%=@property.reception_rooms%></span></li>
            <li><%="Building age:"%><span class="kind"><%=@property.building_age%></span></li>
            <li><%="Indoor size:"%><span class="kind"><%=@property.indoor_size%></span></li>          
            <li><%="Outdoor size:"%><span class="kind"><%=@property.outdoor_size%></span></li>
            <li><%="Layout:"%><span class="kind"><%=@property.layout%></span></li>
            <li><%="floor:"%><span class="kind"><%=@property.floor%></span></li>
          </ul>

        </div>


        <div class="map" id="pro-map">
          <h1>Location</h1> 
          <div class="google" id="google">
            <iframe width="640" height="500" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://ditu.google.cn/maps?f=q&amp;source=s_q&amp;hl=zh-CN&amp;geocode=&amp;q=<%=@property.building_name%>&amp;sll=<%=@property.latitude%>,<%=@property.longitude%>&amp;sspn=<%=@property.latitude%>,<%=@property.longitude%>&amp;brcurrent=3,0x0:0x0,0%3B5,0,0&amp;ie=UTF8&amp;hq=&amp;ll=<%=@property.latitude%>,<%=@property.longitude%>&amp;spn=<%=@property.latitude%>,<%=@property.longitude%>&amp;t=m&amp;z=11&amp;output=embed"></iframe><br /><small><a href="http://ditu.google.cn/maps?f=q&amp;source=embed&amp;hl=zh-CN&amp;geocode=&amp;q=<%=@property.building_name%>&amp;sll=<%=@property.latitude%>,<%=@property.longitude%>&amp;sspn=<%=@property.latitude%>,<%=@property.longitude%>&amp;brcurrent=3,0x0:0x0,0%3B5,0,0&amp;ie=UTF8&amp;hq=&amp;ll=<%=@property.latitude%>,<%=@property.longitude%>&amp;spn=<%=@property.latitude%>,<%=@property.longitude%>&amp;t=m&amp;z=11" style="color:#0000FF;text-align:left">Bigmap</a></small>
               
          </div>
        </div>
      </div>
    </div>



    <div class="feedback">
      <div class="information">
        <h3>Interesting</h3>
        <div id="feedback" class="wrap">
          <%= form_for([@property, @property.feedbacks.build],remote:true ) do |f| %>
            <div class="field">
              <%= f.label "Name" %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label "Phone" %><br>
              <%= f.telephone_field :phone %>
            </div>
            <div class="field">
              <%= f.label "Email" %><br>
              <%= f.text_field :email %>
            </div>
            <div class="field">
              <%= f.label "Message" %><br>
              <%= f.text_area :message %>
            </div>
            <div class="actions">
              <%=f.submit "Submit"%>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="clear"></div>


<%=render 'public/footer'%>

<a id="back-to-top"></a>
<script>
function translate1(){

      document.getElementById("buliding_name").innerHTML="<%=@building_name1%>";
      document.getElementById("description").innerHTML="<small>通过百度翻译，不准之处请客官谅解</small> <br><br><br><%=@description1%>";
      document.getElementById("translate1").style.display="none";
      document.getElementById("translate2").style.display="block";
}


function translate2(){
        document.getElementById("buliding_name").innerHTML="<%=@property.building_name%>";
      document.getElementById("description").innerHTML="<%=@property.description.html_safe %>";
      document.getElementById("translate1").style.display="block";
      document.getElementById("translate2").style.display="none";
      
}
</script>


