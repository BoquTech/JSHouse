<%=render 'public/header1'%>   

<!--导航部分-->
   <div class="tabs">
            <ul>
              <li>
                  <h1><%="Hot"+" "+"Properties"%></h1>
              </li>
            </ul> 
    </div>  

    <div class="clear"> </div>

<!--主体部分-->
  
  <div id="house">
    <div class="containers">
      <ul>
          <% @properties.each do |property| %>
          <li>
            <div class="box">
              <a href="<%=property_path(property)%>" target="_blank" >
                  <img class="show" src="<%=property.item_images.first.image_url%>" onerror="this.src='../house/firstpage.jpg'"/>
                
                  <a class="price"><%= property.building_name+","+property.address%></a>
                  <a class="price1"><%="$"+property.buy.to_i.to_s%></a>
                  <a class="price2"></a>
                  </a>            
            </div>
          </li>
          <% end %>     
        </ul>       
       </div>
      </div>

  </div>
<div class="clear"> </div>


<%=render 'public/footer'%>
<a id="back-to-top"></a>


